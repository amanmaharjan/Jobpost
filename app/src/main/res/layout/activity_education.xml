<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.welcome.jobpost.Education"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#f1f1f1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20"
        android:background="@drawable/border">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="25sp"
            android:layout_gravity="center"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/JedIName"
            android:hint="Institute  Name"
            android:layout_weight="1"
            android:background="@drawable/viewborder"
            style="@style/viewMargin"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/JedPassedY"
            android:hint="Passed Year"
            android:layout_weight="1"
            android:background="@drawable/viewborder"
            style="@style/viewMargin"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/JedGrade"
            android:hint="Grade"
            android:layout_weight="1"
            android:background="@drawable/viewborder"
            style="@style/viewMargin"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/viewborder"
            style="@style/viewMargin">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/education"
                android:id="@+id/Jspinner"

                >

            </Spinner>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/btn_jsubmit"
            android:background="@drawable/button"
            style="@style/ButtonColor"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
