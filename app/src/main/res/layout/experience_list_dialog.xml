<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="20"
        android:orientation="vertical"
        android:background="@drawable/border"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experience"
            android:textSize="25sp"
            android:layout_gravity="center"
            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/JexDCompanyN"
            android:hint="Company  Name"
            android:background="@drawable/viewborder"
            style="@style/viewMargin"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/JexDJobTitle"
            android:hint="Job Title"
            android:background="@drawable/viewborder"
            style="@style/viewMargin"/>

        <EditText
            android:id="@+id/JexDDuratonOw"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Duration of Work"
            android:background="@drawable/viewborder"
            style="@style/viewMargin"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/viewborder"
            style="@style/viewMargin">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/functional"
                android:id="@+id/JExDSpinerWA">

            </Spinner>

        </LinearLayout>
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/JExDUpdate"
        android:layout_weight="1"
        android:background="@drawable/button"
        style="@style/ButtonColor"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/JExDDelete"
        android:layout_weight="1"
        android:background="@drawable/button"
        style="@style/ButtonColor"/>

</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/JExDClose"
        android:layout_weight="1"
        android:background="@drawable/button"
        style="@style/ButtonColor"
        android:layout_gravity="center"/>


</LinearLayout>

</LinearLayout>