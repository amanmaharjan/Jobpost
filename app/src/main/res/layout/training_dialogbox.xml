<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20"
        android:background="@drawable/border">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training"
            android:textSize="25sp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/T_Update_IName"
            style="@style/viewMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/viewborder"
            android:hint="Institute  Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/T_Update_PassedY"
            android:hint="Training Title"
            android:layout_weight="1"
            android:background="@drawable/viewborder"
            style="@style/viewMargin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/T_Update_Grade"
            android:hint="Duration"
            android:layout_weight="1"
            android:background="@drawable/viewborder"
            style="@style/viewMargin"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:id="@+id/TDUpdate"
                android:layout_weight="1"
                android:background="@drawable/button"
                style="@style/ButtonColor"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/TDDelete"
                android:layout_weight="1"
                android:background="@drawable/button"
                style="@style/ButtonColor"/>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:id="@+id/TDClose"
            android:layout_weight="1"
            android:background="@drawable/button"
            style="@style/ButtonColor"
            android:layout_gravity="center"/>


    </LinearLayout>

</LinearLayout>